<UserControl x:Class="academy_project.ChatListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:academy_project">
    <Grid>
        <ListView x:Name="chatListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding ChatName}" Click="ChatItem_Click"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>